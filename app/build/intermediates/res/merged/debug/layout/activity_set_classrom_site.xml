<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/edit_background"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/top_bar_middle"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="2dip" >

        <TextView
            android:id="@+id/exitClassRoomSetButton"
            android:layout_width="60dip"
            android:layout_height="35dip"
            android:layout_gravity="center_vertical|left"
            android:background="@drawable/top_bar_back"
            android:gravity="center_vertical"
            android:paddingLeft="20dip"
            android:text="@string/exit"
            android:textColor="#FFFFFF"
            android:textSize="15sp" >
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center_vertical|right"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dip"
                android:gravity="center_vertical|center"
                android:text="@string/set_classroom_radius"
                android:textColor="#0a0909"
                android:textSize="15sp"
                />

           <android.support.v7.widget.AppCompatSpinner
               android:id="@+id/Spinner_classRoom_radius"
               android:layout_gravity="center_vertical"
               android:layout_width="110dip"
               android:layout_height="40dip"
               android:background="#00fc04"
               android:spinnerMode="dialog"
               android:entries="@array/set_classroomRadius" >
           </android.support.v7.widget.AppCompatSpinner>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:text="@string/atitude_and_longitude"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/result1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="18sp"/>

    <TextView
        android:text="@string/classroom_site"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_dark" />


    <TextView
        android:id="@+id/result2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="18sp"/>

    <Button
        android:text="@string/get_classroom_site"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idGetClassroomSite" />

</LinearLayout>
